<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.turnolibre.business.ubicacion" default-access="field">

	<class name="Barrio" table="barrios">

		<id name="id">
			<generator class="native" />
		</id>

		<many-to-one name="ciudad" column="ciudad_id" class="Ciudad" unique-key="BARRIO_BUSINESS_KEY" not-null="true" foreign-key="FK_BARRIO_CIUDAD" update="false" />
		<property name="nombre" unique-key="BARRIO_BUSINESS_KEY" not-null="true" />

	</class>

</hibernate-mapping>
