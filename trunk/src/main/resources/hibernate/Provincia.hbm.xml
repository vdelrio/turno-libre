<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.turnolibre.business.ubicacion" default-access="field">

	<class name="Provincia" table="provincias">

		<id name="id">
			<generator class="native" />
		</id>

		<!-- No tiene unique-key porque sino los ordena alfabeticamente y no es lo que se quiere -->
		<property name="nombre" not-null="true" />

	</class>

</hibernate-mapping>
