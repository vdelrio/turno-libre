<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.turnolibre.business.prestador" default-access="field">
	
    <class name="Noticia" table="noticias">
    
		<id name="id">
			<generator class="native" />
		</id>
		
        <property name="fecha" not-null="true" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime" />
		<property name="cuerpo" not-null="true" />
        
    </class>
    
</hibernate-mapping>
